{
  "name": "hono-vite-react-stack-node",
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "test": "bun --filter=\"basic\" test:e2e",
    "build": "tsup",
    "watch": "tsup --watch",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}'",
    "format": "prettier --check 'src/**/*.{ts,tsx}'",
    "format:fix": "prettier --write 'src/**/*.{ts,tsx}'",
    "publint": "publint",
    "prerelease": "bun run build",
    "release": "np"
  },
  "files": [
    "dist"
  ],
  "workspaces": [
    "./",
    "./examples/basic"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    }
  },
  "author": "Yusuke Wada <yusuke@kamawada.com> (https://github.com/yusukebe)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yusukebe/hono-vite-react-stack.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "devDependencies": {
    "@hono/eslint-config": "^1.1.1",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "glob": "^11.0.1",
    "np": "^10.2.0",
    "prettier": "^3.5.3",
    "publint": "^0.3.9",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.4.0",
    "vite": "^6.2.4"
  },
  "dependencies": {
    "@cloudflare/vite-plugin": "^0.1.20",
    "@hono/vite-build": "^1.6.1",
    "@tailwindcss/vite": "^4.1.1",
    "@vitejs/plugin-react": "^4.3.4",
    "vite-plugin-ssr-hot-reload": "^0.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
